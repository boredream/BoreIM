<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/include_titlebar" />

    <RelativeLayout
        android:id="@+id/rl_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white2gray_sel"
        android:orientation="vertical"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewSubhead"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="BoreDream" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextViewBody"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="我就是油坊桥吴彦祖" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/register_bottom_arrow" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_logout"
        style="@style/ButtonPrimaryColor"
        android:layout_margin="16dp"
        android:text="退出登录" />

</LinearLayout>